<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/btn_bg_selector"
            android:paddingTop="10.0dip"
            android:paddingBottom="0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginBottom="10.0dip">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

            <ProgressBar
                    android:layout_gravity="center_vertical"
                    android:id="@+id/progressBar_refresh"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/progressbar"
                    style="?android:attr/progressBarStyleInverse"/>

            <LinearLayout
                    android:id="@+id/linelayout_refresh"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0.0dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="@dimen/lookmore_bar_txt_size"
                        android:textColor="@color/foot_bar_text"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刷 新"
                        android:singleLine="true"/>

                <TextView
                        android:textSize="@dimen/foo_bar_refresh_time_size"
                        android:textColor="@color/foot_bar_text"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/refresh_last_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2013-01-01 00:00:00"
                        android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>