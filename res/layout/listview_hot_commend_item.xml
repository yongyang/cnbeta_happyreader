<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:padding="4dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:id="@+id/to"
                android:textStyle="bold"
                android:text="评: "
                android:textColor="?attr/cnBeta_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dip"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:textColor="?attr/cnBeta_text_color"
                android:id="@+id/titleShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/cnBeta_hotComment_bg"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="2dip">

        <TextView
                android:textSize="@dimen/listitem_comment_text_size"
                android:textColor="?attr/cnBeta_comment_text_color"
                android:id="@+id/comment"
                android:padding="4dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="?attr/cnBeta_text_status_gray"
                android:id="@+id/from"
                android:text="来自"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="?attr/cnBeta_text_status_gray"
                android:id="@+id/hostNameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="?attr/cnBeta_text_status_gray"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
    </LinearLayout>
    <TextView
            android:textSize="@dimen/listitem_status_text_size"
            android:textColor="?attr/cnBeta_text_status_gray"
            android:paddingRight="2dip"
            android:id="@+id/date"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
</LinearLayout>
