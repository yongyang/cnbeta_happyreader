<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:padding="4.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip">

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:id="@+id/to"
                android:textStyle="bold"
                android:text="评论: "
                android:textColor="@color/cnBeta_text_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dip"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:textColor="@color/cnBeta_text_blue"
                android:id="@+id/titleShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hotcomment_bg"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip">

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:id="@+id/comment"
                android:padding="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="@color/cnBeta_text_description_gray"
                android:id="@+id/from"
                android:text="来自"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="@color/cnBeta_text_description_gray"
                android:id="@+id/hostNameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_status_text_size"
                android:textColor="@color/cnBeta_text_description_gray"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>

