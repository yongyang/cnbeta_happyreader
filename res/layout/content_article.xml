<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="@dimen/listitem_title_text_size"
                android:textColor="@color/cnBeta_text_blue"
                android:gravity="center_horizontal"
                android:id="@+id/tv_articleTitle"
                android:padding="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:maxLines="2"
                android:freezesText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00 00:00:00"
                    android:singleLine="true"
                    android:paddingRight="2dip"/>

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="阅读:"
                    android:paddingLeft="2dip"
                    />

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_viewNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:singleLine="true"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"/>

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="评论:"
                    android:paddingLeft="2dip"
                    />

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_commentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:singleLine="true"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"/>

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="稿源:"
                    android:paddingLeft="2dip"
                    />

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="####"
                    android:singleLine="true"
                    android:paddingLeft="2dip"/>

        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBarLayout"
                    android:gravity="center"
                    android:layout_marginTop="40dip"
                    >

                <ProgressBar
                        android:id="@+id/loading_progessBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        style="?android:progressBarStyleLarge"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cnBeta_text_description_gray"
                        android:textSize="@dimen/listitem_title_text_size"
                        android:text="内容加载中..."
                        />

            </LinearLayout>

            <WebView
                    android:id="@+id/wv_articleContent"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            <RatingBar
                    android:id="@+id/rate_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:visibility="gone"/>
            <ProgressBar
                    android:id="@+id/rating_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    style="?android:progressBarStyle"
                    android:layout_marginBottom="8dip"/>
            <RatingBar
                    android:id="@+id/result_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
