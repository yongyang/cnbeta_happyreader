<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:id="@+id/contentScrollView"
        android:background="#fffcfcfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="15.0dip"
                android:textColor="@color/cnBeta_text_blue"
                android:gravity="center_horizontal"
                android:id="@+id/tv_articleTitle"
                android:padding="2.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:freezesText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00 00:00:00"
                    android:singleLine="true"
                    android:paddingRight="2.0dip"/>
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="阅读:"
                    android:paddingLeft="2.0dip"
                    />
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_viewNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:singleLine="true"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"/>
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="评论:"
                    android:paddingLeft="2.0dip"
                    />
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_commentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:singleLine="true"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"/>
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="稿源:"
                    android:paddingLeft="2.0dip"
                    />
            <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/tv_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="####"
                    android:singleLine="true"
                    android:paddingLeft="2.0dip"/>

        </LinearLayout>
        <WebView
                android:id="@+id/wv_articleContent"
                android:fitsSystemWindows="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:stepSize="0.5"
                android:numStars="5"
                />

    </LinearLayout>
</ScrollView>
