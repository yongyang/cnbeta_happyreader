<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="@color/cnBeta_comment_dialog_bg_yellow"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:textColor="@color/cnBeta_text_blue"
            android:gravity="top"
            android:id="@+id/comment"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:hint="请输入评论内容"
            android:lines="4"
            android:maxLength="320"/>

    <LinearLayout
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:gravity="center_vertical">
        <TextView
                android:textColor="@color/cnBeta_text_blue"
                android:text="验证码: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <EditText
                android:textColor="@color/black"
                android:id="@+id/seccode"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"
                android:maxLength="4"/>

        <ImageView
                android:id="@+id/seccode_image"
                android:visibility="gone"
                android:layout_width="60.0dip"
                android:layout_height="35.0dip"/>

        <ProgressBar
                android:id="@+id/captcha_progessBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"/>
    </LinearLayout>

    <RelativeLayout
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10.0dip">


        <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textSize="14dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:background="@drawable/btn_bg_comment_selector"
                android:text="取 消"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/cancel"
                android:textColor="#FFFFFF"
                android:textSize="14dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:background="@drawable/btn_bg_comment_selector"
                android:text="发 表"
                android:layout_centerVertical="true"/>

        <ProgressBar
                android:id="@+id/post_progessBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_toLeftOf="@id/send"
                android:visibility="invisible"
                android:layout_marginRight="5dip"
                style="?android:progressBarStyleSmall"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>