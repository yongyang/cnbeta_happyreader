<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="@color/cnBeta_comment_dialog_bg_yellow"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:textColor="@color/cnBeta_text_blue"
            android:gravity="top"
            android:id="@+id/comment"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:hint="请输入评论内容"
            android:lines="4"
            android:maxLength="320"/>

    <RelativeLayout
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip">

        <EditText
                android:textColor="@color/black"
                android:id="@+id/seccode"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:hint="验证码"
                android:maxLength="4"
                android:numeric="integer"
                android:layout_alignParentLeft="true"/>

        <ImageView
                android:id="@+id/seccode_image"
                android:visibility="gone"
                android:layout_width="170.0dip"
                android:layout_height="36.0dip"
                android:layout_marginTop="5.0px"
                android:layout_toRightOf="@id/seccode"
                android:layout_centerInParent="true"/>

        <ProgressBar
                android:id="@+id/loading_progessBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/seccode_image"
                android:layout_centerVertical="true"
                style="@android:style/Widget.ProgressBar.Small"/>
    </RelativeLayout>

    <RelativeLayout
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip">

        <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0px"
                android:layout_alignParentRight="true"
                android:text="取消"/>
        <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0px"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/cancel"
                android:text="评论"/>

    </RelativeLayout>
</LinearLayout>