<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dip">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="@dimen/listitem_title_text_size"
                android:textColor="@color/cnBeta_orange"
                android:textStyle="bold"
                android:text="•"
                android:paddingRight="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <TextView
                android:textSize="@dimen/listitem_title_text_size"
                android:textColor="@color/cnBeta_text_blue"
                android:id="@+id/title_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"/>

    </LinearLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/item_logo"
                android:layout_width="@dimen/listitem_logo_width"
                android:layout_height="@dimen/listitem_logo_height"
                android:src="@drawable/default_img"
                android:paddingRight="2dip"
                android:paddingLeft="2dip"/>

        <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_logo"
                android:layout_alignBaseline="@+id/item_logo"
                android:paddingLeft="4dip">

            <TextView
                    android:textSize="@dimen/listitem_description_text_size"
                    android:textColor="@color/cnBeta_text_description_gray"
                    android:id="@+id/hometext_show_short2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:ellipsize="end"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:gravity="center">

                    <TextView
                            android:textSize="@dimen/listitem_status_text_size"
                            android:textColor="@color/cnBeta_text_status_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:paddingLeft="4dip"
                            android:text="评论:"/>

                    <TextView
                            android:textSize="@dimen/listitem_status_text_size"
                            android:textColor="@color/cnBeta_text_status_gray"
                            android:id="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>

                    <TextView
                            android:textSize="@dimen/listitem_status_text_size"
                            android:textColor="@color/cnBeta_text_status_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:paddingLeft="4dip"
                            android:text="发表于:"/>

                    <TextView
                            android:textSize="@dimen/listitem_status_text_size"
                            android:textColor="@color/cnBeta_text_status_gray"
                            android:ellipsize="none"
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:paddingRight="2dip"/>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>
