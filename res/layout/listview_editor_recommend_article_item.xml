<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="@dimen/listitem_title_text_size"
                    android:textColor="?attr/cnBeta_orange"
                    android:textStyle="bold"
                    android:text="•"
                    android:paddingRight="2dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

            <TextView
                    android:textSize="@dimen/listitem_title_text_size"
                    android:textColor="?attr/cnBeta_text_color"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

        </LinearLayout>

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:textColor="?attr/cnBeta_text_description_gray"
                android:id="@+id/hometext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="2"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:ellipsize="end"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="6dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp">

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="?attr/cnBeta_text_status_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="发表于: "/>

            <TextView
                    android:textSize="@dimen/listitem_status_text_size"
                    android:textColor="?attr/cnBeta_text_status_gray"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>