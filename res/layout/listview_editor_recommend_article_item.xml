<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="@dimen/listitem_title_text_size"
                    android:textColor="@color/cnBeta_orange"
                    android:textStyle="bold"
                    android:text="â€¢"
                    android:paddingRight="2dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

            <TextView
                    android:textSize="@dimen/listitem_title_text_size"
                    android:textColor="@color/cnBeta_text_blue"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

        </LinearLayout>

        <TextView
                android:textSize="@dimen/listitem_description_text_size"
                android:textColor="@color/cnBeta_text_description_gray"
                android:id="@+id/hometext_show_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>