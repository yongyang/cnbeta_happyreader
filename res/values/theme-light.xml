<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- =========================================== Light theme =============================== -->
    <style name="Theme_cnBeta_Light" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/cnBeta_default_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/Style_ActionBar_cnBeta</item>
        <item name="android:actionBarTabStyle">@style/Style_ActionBarTab_cnBeta</item>
        <item name="android:actionBarTabTextStyle">@style/Style_ActionBar_TabText_cnBeta</item>
        <item name="android:actionBarWidgetTheme">@style/Style_PopupMenu_cnBeta</item>
        <item name="android:actionBarDivider">@color/light_gray</item>
        <item name="android:absListViewStyle">@style/Style_AbsListView_cnBeta</item>

        <!-- custom item for actionTab custom TextView -->
        <item name="actionTabCustomTextViewStyle">@style/Style_ActionBar_TabText_cnBeta</item>
        <item name="cnBeta_text_color">@color/cnBeta_text_blue</item>
        <item name="cnBeta_footBar_text">@color/cnBeta_footBar_text</item>
        <item name="cnBeta_comment_text_color">@color/cnBeta_comment_text_color</item>
        <item name="cnBeta_default_bg">@color/cnBeta_default_bg</item>
        <item name="cnBeta_text_description_gray">@color/cnBeta_text_description_gray</item>
        <item name="cnBeta_text_status_gray">@color/cnBeta_text_status_gray</item>
        <item name="cnBeta_text_status_realtime_green">@color/cnBeta_text_status_realtime_green</item>
        <item name="cnBeta_bg_blue">@color/cnBeta_bg_blue</item>
        <item name="cnBeta_bg_middle_blue">@color/cnBeta_bg_middle_blue</item>
        <item name="cnBeta_bg_light_blue">@color/cnBeta_bg_light_blue</item>
        <item name="cnBeta_text_light_blue">@color/cnBeta_text_light_blue</item>
        <item name="cnBeta_text_introduction_black">@color/cnBeta_text_introduction_black</item>
        <item name="cnBeta_bg_introduction">@color/cnBeta_bg_introduction</item>
        <item name="cnBeta_orange">@color/cnBeta_orange</item>
        <item name="cnBeta_comment_dialog_bg_yellow">@color/cnBeta_comment_dialog_bg_yellow</item>
        <item name="cnBeta_comment_bg_yellow">@color/cnBeta_comment_bg_yellow</item>
        <item name="cnBeta_tab_text_default">@color/cnBeta_tab_text_default</item>
        <item name="cnBeta_tab_text_default_dark">@color/cnBeta_tab_text_default_dark</item>

        <item name="cnBeta_parentComment_bg">@drawable/parent_comment_bg</item>
        <item name="cnBeta_hotComment_bg">@drawable/hotcomment_bg</item>
        <item name="cnBeta_btn_bg">@drawable/btn_bg_selector</item>
    </style>

    <style name="Style_AbsListView_cnBeta" parent="@android:style/Widget.AbsListView">
        <item name="android:background">@color/cnBeta_default_bg</item>
    </style>

    <style name="Style_ActionBar_cnBeta" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cnBeta_bg_blue</item>
        <item name="android:backgroundStacked">@color/white</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Style_PopupMenu_cnBeta" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/Style_ListPopupWindow_cnBeta</item>
    </style>

    <style name="Style_ListPopupWindow_cnBeta" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/cnBeta_bg_middle_blue</item>
    </style>

    <style name="Style_ActionBar_TabText_cnBeta" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tab_text_color_selector_cnbeta</item>
        <!--<item name="android:textStyle">italic|bold</item>  -->
    </style>

    <style name="Style_ActionBarTab_cnBeta" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cnbeta</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>




    <!-- ================== Dialog ===================== -->
        <!-- =============================================== Dialog with no Title ====================================== -->
    <style name="Theme_Dialog_cnBeta_Light" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->

        <item name="cnBeta_comment_dialog_bg_yellow">@color/cnBeta_comment_dialog_bg_yellow</item>
        <item name="cnBeta_text_color">@color/cnBeta_text_blue</item>
    </style>

</resources>