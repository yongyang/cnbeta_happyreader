<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CnBeta" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.CnBeta</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.CnBeta</item>
        <item name="android:actionBarTabTextStyle">@style/TabText.CnBeta</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.CnBeta.Widget</item>
        <item name="android:actionBarDivider">@color/light_gray</item>
    </style>

    <style name="ActionBar.Solid.CnBeta" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cnBeta_bg_blue</item>
        <item name="android:backgroundStacked">@color/white</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.CnBeta.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.CnBeta</item>
    </style>

    <style name="PopupMenu.CnBeta" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/cnBeta_bg_middle_blue</item>
    </style>

    <style name="TabText.CnBeta" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/tab_text_color_selector_cnbeta</item>
        <!--<item name="android:textStyle">italic|bold</item>  -->
    </style>

    <style name="ActionBarTabStyle.CnBeta" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cnbeta</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>


    <!-- -->
    <style name="Dialog.NoTitle" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowBackground">@color/transparent_background</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->
    </style>

</resources>