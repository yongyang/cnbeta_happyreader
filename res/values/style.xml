<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CnBetaTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/cnBetaActionBarStyle</item>
        <item name="android:popupMenuStyle">@style/cnBetaPopupMenuStyle</item>
    </style>

    <style name="cnBetaActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/cnBetaActionBarTitleText</item>
        <item name="android:background">@color/deep_blue</item>
        <item name="android:backgroundStacked">@color/white</item>
    </style>

    <style name="cnBetaPopupMenuStyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/light_gray</item>
    </style>

    <style name="cnBetaActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>