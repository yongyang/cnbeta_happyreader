<?xml version="1.0" encoding="utf-8"?>
<shape
        android:shape="rectangle"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
            android:color="#3186AD"
            android:width="2px"/>
    <corners
            android:topLeftRadius="5dip"
            android:topRightRadius="5dip"
            android:bottomLeftRadius="5dip"
            android:bottomRightRadius="5dip"/>
    <gradient
            android:startColor="#4A9ECE"
            android:endColor="#4A9ECE"
            android:type="linear"
            android:angle="90"
            android:centerX="0.5"
            android:centerY="0.5"/>
    <padding
            android:left="2dip"
            android:right="2dip"
            android:top="2dip"
            android:bottom="2dip"
            />
</shape>
