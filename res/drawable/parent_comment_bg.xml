<?xml version="1.0" encoding="utf-8"?>
<shape
        android:shape="rectangle"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
            android:color="@color/cnBeta_parentComment_bg_stroke"
            android:width="1px"/>
    <corners
            android:topLeftRadius="3dip"
            android:topRightRadius="3dip"
            android:bottomLeftRadius="3dip"
            android:bottomRightRadius="3dip"/>
    <gradient
            android:startColor="@color/cnBeta_parentComment_bg_gradient_startColor"
            android:endColor="@color/cnBeta_parentComment_bg_gradient_endColor"
            android:type="linear"
            android:angle="90"
            android:centerX="0.5"
            android:centerY="0.5"/>
    <padding
            android:left="2dip"
            android:right="2dip"
            android:top="2dip"
            android:bottom="2dip"
            />
</shape>
