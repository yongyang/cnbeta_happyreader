<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.jandroid.cnbeta"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="17"/>
    <application
            android:name="CnBetaApplication"
            android:theme="@style/Theme.CnBeta"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher">
        <!--for test case -->
        <uses-library android:name="android.test.runner" />
        <activity
                android:name="MainActivity"
                android:label="@string/app_name"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ArticleContentActivity" android:label="@string/label_article_content"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

    <!--for test case-->
    <instrumentation android:name="android.test.InstrumentationTestRunner"
                     android:targetPackage="org.jandroid.cnbeta" android:label="TestCases" />

</manifest>
